extends ../../dashboardLayout
block dashboardContent
  a(href="/dashboard/inventory/products/new")
    button Agregar producto 
  a(href="/dashboard/inventory")
    button Regresar
  
  table
    thead
      tr
        th ID
        th Nombre
        th Precio
        th
    tbody
      each product in products 
        tr 
          td=product.id 
          td=product.name 
          td=product.price
          td
            a(href=`/dashboard/inventory/products/${product.id}/edit`)
              button Editar